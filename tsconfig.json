{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES5", "ES2022"],
  },
  "exclude": ["node_modules/", "tests/"],
  "include": ["src/"],
}
