{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2015",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["DOM", "ES2016"]
    },
    "exclude": ["node_modules", "tests"],
    "include": ["src/"]
}
